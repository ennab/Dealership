@model IEnumerable<Dealership.DomainEntities.Model>


@{
    ViewBag.Title = "Models";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
@Html.ActionLink("New", "New", "Models", null, new { @class = "btn btn-primary", role = "button" })
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Model</th>
            <th>Make</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vModel in Model)
        {
            <tr>
                <td> @Html.ActionLink(vModel.Name, "Edit", "Models", new { id = vModel.Id }, null) </td>
                <td> @vModel.Make.Name</td>
            </tr>
        }
    </tbody>
</table>

